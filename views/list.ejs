<%- include('header'); -%>

<div class="box" id="heading">
  <h1> <%= listTitle %></h1>
</div>

<div class="box">
  <% newEntries.forEach(function(i) { %>
    <form action="/delete" method="post">
    <div class="item">
    <input type="checkbox" name= "deleteItem" value= "<%= i._id %>" onChange="this.form.submit()">
      <p><%= i.name %></p>
    </div>
    <%# hidden tag to capture the list where an item was deleted %>
    <input type="hidden" name="deleteCustomItem" value="<%= listTitle %>">
    </form>
  <% }); %>



  <form class="item" action="/" method="post">
    <input type="text" name="newItem" placeholder="New Item" autocomplete="off">
    <button class="button" type="submit" name="customItem" value= "<%= listTitle %>"> + </button>
  </form>

</div>


<%- include('footer'); -%>
